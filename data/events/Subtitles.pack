function onEvent(_) {
	if (_.event.name == 'Subtitles'){
		subtitle.text=_.event.params[0];
		fade = 0;
		if(subtitle.text==''){trace("Oh_ok.");
			return;
		}
		subtitle.font=Paths.font("futura.otf");
		subtitle.color=_.event.params[1];
		trace(_.event.params[1],subtitle.color);
		//setTextColor('subtitle', value2)
	}
}________PACKSEP________{
	"params": [
		{
			"name": "Text",
			"type": "String",
			"defaultValue": "Balls"
		},{
			"name": "Color",
			"type": "ColorWheel",
			"defaultValue": "0xFFFFFFF"
		}
	]
}